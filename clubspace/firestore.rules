rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions for authentication
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isEmailVerified() {
      return isSignedIn() && request.auth.token.email_verified == true;
    }
    
    // Clubs collection - simplified rules for testing
    match /clubs/{clubId} {
      // Allow read for signed-in users
      allow read: if isSignedIn();
      
      // Allow create for verified users
      allow create: if isSignedIn() && isEmailVerified();
      
      // Allow update/delete for authenticated users (simplified)
      allow update, delete: if isSignedIn() && isEmailVerified();
    }
    
    // Club members collection - simplified rules
    match /clubMembers/{membershipId} {
      // Allow all operations for signed-in users (temporary)
      allow read, write: if isSignedIn() && isEmailVerified();
    }
    
    // Club statistics collection - simplified rules
    match /clubStats/{clubId} {
      // Allow all operations for signed-in users (temporary)
      allow read, write: if isSignedIn() && isEmailVerified();
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Other collections with basic rules
    match /{document=**} {
      allow read, write: if isSignedIn() && isEmailVerified();
    }
  }
}